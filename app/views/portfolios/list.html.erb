<h1>Portfolios</h1>
<%= link_to 'New', {action: :new}, class: 'btn btn-success mb-3' %>
<%= form_tag action: :change_default_portfolio do %>
  <%= label_tag 'Default portfolio' %>
  <div class="form-group">
    <%= select_tag 'portfolio_id', options_for_select(portfolio_list, @default_portfolio), class: 'form-select' %>
  </div>
  <br/>
  <%= submit_tag 'Change', class: 'btn btn-primary' %>
<% end %>
<br/>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @portfolios.each do |portfolio| %>
      <tr>
        <td> <%= portfolio.name %></td>
        <td><%= link_to 'Edit', {action: :edit, id: portfolio.id}, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Delete', { action: :destroy, id: portfolio.id}, class: 'btn btn-danger', data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
    <% if @portfolios.blank? %>
      <tr>
        <td colspan="3"> No portfolios...</td>
      </tr>    
    <% end %>    
  </tbody>
</table>
